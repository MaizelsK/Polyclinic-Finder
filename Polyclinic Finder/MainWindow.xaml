<Window x:Class="Polyclinic_Finder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Polyclinic_Finder"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" WindowStartupLocation="Manual" Visibility="Visible">
    <Grid>
        <DockPanel LastChildFill="True">
            <DockPanel DockPanel.Dock="Left" Width="170" Background="#FFB6DDFF" LastChildFill="True">
                <StackPanel DockPanel.Dock="Top" Background="#FFC9FFE2"  Height="258">

                </StackPanel>
                <StackPanel DockPanel.Dock="Bottom" Background="#FFB2B2B2">
                    <TextBox x:Name="searchButton" Text="Ваш адресс..." Margin="10,10,10,0" TextDecorations="{x:Null}" Background="White" Foreground="#FFA0A0A0" GotKeyboardFocus="searchButton_GotKeyboardFocus" LostFocus="searchButton_LostFocus"/>
                    <Button Background="White" BorderBrush="White" Margin="50,5,50,0">Поиск</Button>
                </StackPanel>
            </DockPanel>

            <StackPanel DockPanel.Dock="Right"/>
        </DockPanel>

    </Grid>
</Window>
